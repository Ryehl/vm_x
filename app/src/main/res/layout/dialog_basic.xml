<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_corner_white_25"
    android:orientation="vertical"
    android:layout_marginHorizontal="25dp"
    tools:layout_gravity="center">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="25dp"
        android:textColor="@color/box_33"
        android:textSize="25sp"
        android:textStyle="bold"
        tools:text="Basic dialog title" />

    <TextView
        android:id="@+id/tv_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/box_33"
        android:textSize="15sp"
        tools:text="A dialog is a type of modal window that appears in front of app content to provide critical information, or prompt for a decision to be made." />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginHorizontal="25dp"
        android:layout_marginVertical="24dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="13dp"
            android:textColor="@color/box_33"
            android:textSize="15sp"
            tools:text="Action1" />

        <TextView
            android:id="@+id/tv_enter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="13dp"
            android:textColor="@color/box_33"
            android:textSize="15sp"
            tools:text="Action2" />

    </LinearLayout>

</LinearLayout>